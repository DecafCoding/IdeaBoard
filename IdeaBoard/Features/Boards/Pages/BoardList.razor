@page "/boards"
@using IdeaBoard.Features.Boards.Models
@using IdeaBoard.Features.Boards.Services
@using IdeaBoard.Features.Boards.Components
@attribute [Authorize]
@rendermode InteractiveServer
@inject BoardService BoardService
@inject NavigationManager Navigation

<PageTitle>My Boards - IdeaBoard</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Boards</h2>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            <i class="bi bi-plus-circle me-2"></i>Create New Board
        </button>
    </div>

    @if (_loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading boards...</p>
        </div>
    }
    else if (_error != null)
    {
        <div class="alert alert-danger" role="alert">
            <h5 class="alert-heading">Error Loading Boards</h5>
            <p>@_error</p>
            <hr>
            <button class="btn btn-outline-danger" @onclick="LoadBoards">
                <i class="bi bi-arrow-clockwise me-2"></i>Retry
            </button>
        </div>
    }
    else if (_boards == null || _boards.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-clipboard-x" style="font-size: 4rem; color: #ccc;"></i>
            <p class="mt-3 text-muted fs-5">Please add a board</p>
        </div>
    }
    else
    {
        <div class="board-grid">
            @foreach (var board in _boards)
            {
                <div class="board-card" @onclick="() => NavigateToBoard(board.Id)">
                    <div class="board-card-body">
                        <h5 class="board-card-title">@board.Name</h5>
                        <p class="board-card-date">
                            <i class="bi bi-clock me-1"></i>
                            Updated @GetRelativeTime(board.UpdatedAt)
                        </p>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Create Board Modal *@
<CreateBoardModal
    IsVisible="_showCreateModal"
    OnBoardCreated="HandleBoardCreated"
    OnCancel="HandleModalCancel" />

@code {
    private List<Board>? _boards;
    private bool _loading = true;
    private string? _error;
    private bool _showCreateModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadBoards();
    }

    private async Task LoadBoards()
    {
        _loading = true;
        _error = null;

        try
        {
            _boards = await BoardService.GetBoardsAsync();
        }
        catch (UnauthorizedAccessException ex)
        {
            _error = ex.Message;
        }
        catch (Exception ex)
        {
            _error = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _loading = false;
        }
    }

    private void ShowCreateModal()
    {
        _showCreateModal = true;
    }

    private void HandleModalCancel()
    {
        _showCreateModal = false;
    }

    private void HandleBoardCreated(Guid boardId)
    {
        _showCreateModal = false;
        Navigation.NavigateTo($"/board/{boardId}");
    }

    private void NavigateToBoard(Guid boardId)
    {
        Navigation.NavigateTo($"/board/{boardId}");
    }

    private string GetRelativeTime(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;

        if (timeSpan.TotalDays >= 365)
        {
            var years = (int)(timeSpan.TotalDays / 365);
            return $"{years} year{(years > 1 ? "s" : "")} ago";
        }
        else if (timeSpan.TotalDays >= 30)
        {
            var months = (int)(timeSpan.TotalDays / 30);
            return $"{months} month{(months > 1 ? "s" : "")} ago";
        }
        else if (timeSpan.TotalDays >= 1)
        {
            var days = (int)timeSpan.TotalDays;
            return $"{days} day{(days > 1 ? "s" : "")} ago";
        }
        else if (timeSpan.TotalHours >= 1)
        {
            var hours = (int)timeSpan.TotalHours;
            return $"{hours} hour{(hours > 1 ? "s" : "")} ago";
        }
        else if (timeSpan.TotalMinutes >= 1)
        {
            var minutes = (int)timeSpan.TotalMinutes;
            return $"{minutes} minute{(minutes > 1 ? "s" : "")} ago";
        }
        else
        {
            return "just now";
        }
    }
}
